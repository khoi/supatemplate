{
  "name": "supatemplate",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "desktop:build": "cd apps/desktop && bun run tauri -- build",
    "desktop:dev": "cd apps/desktop && bun run tauri -- dev",
    "dev": "turbo run dev",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "fmt": "oxfmt .",
    "fmt:check": "oxfmt --check .",
    "check-types": "turbo run check-types",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "prettier": "^3.7.4",
    "turbo": "^2.7.5",
    "typescript": "5.9.2"
  },
  "lint-staged": {
    "*": "oxfmt --no-error-on-unmatched-pattern",
    "*.{js,jsx,ts,tsx,mjs,cjs}": "bun run lint",
    "apps/desktop/src-tauri/**/*.rs": [
      "bash -c 'cargo fmt --manifest-path apps/desktop/src-tauri/Cargo.toml --all -- --check'",
      "bash -c 'cargo clippy --manifest-path apps/desktop/src-tauri/Cargo.toml --all -- -D warnings'"
    ]
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.2"
}
